<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :sku_code %>
    <%= form.text_field :sku_code %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <table>
    <%= form.fields_for :product_warehouses do |product_warehouse| %>
      <tr>
        <td style="background-color:coral" valign="bottom"><%= product_warehouse.object.warehouse.name %></th>
        <td><%= product_warehouse.label :item_count %></td>
        <td><%= product_warehouse.text_field :item_count, placeholder: 'Item Count' %></td>
        <td><%= product_warehouse.label :low_item_threshold %></td>
        <td><%= product_warehouse.text_field :low_item_threshold, placeholder: 'Low Item Threshold' %></td>
      </tr>
    <% end %>
  </table>
  </br></br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
